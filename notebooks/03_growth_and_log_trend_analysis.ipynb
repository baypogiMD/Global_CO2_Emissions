# 03_growth_and_log_trend_analysis.ipynb

import pandas as pd
import numpy as np
import sqlite3
import matplotlib.pyplot as plt
from sklearn.linear_model import LinearRegression

conn = sqlite3.connect("../data/processed/global_co2_emissions.db")

df = pd.read_sql("""
SELECT year, emissions
FROM global_emissions
ORDER BY year
""", conn)

# Growth rate
df["pct_growth"] = df["emissions"].pct_change() * 100

plt.figure()
plt.plot(df["year"], df["pct_growth"])
plt.axhline(0)
plt.title("Year-over-Year Emissions Growth Rate (%)")
plt.xlabel("Year")
plt.ylabel("% Growth")
plt.show()

# Log-linear regression
df_nonzero = df[df["emissions"] > 0].copy()
df_nonzero["log_emissions"] = np.log(df_nonzero["emissions"])

X = df_nonzero[["year"]]
y = df_nonzero["log_emissions"]

model = LinearRegression().fit(X, y)
df_nonzero["log_pred"] = model.predict(X)

plt.figure()
plt.plot(df_nonzero["year"], df_nonzero["log_emissions"], label="Observed")
plt.plot(df_nonzero["year"], df_nonzero["log_pred"], linestyle="--", label="Log-Linear Fit")
plt.legend()
plt.title("Exponential Growth Validation")
plt.show()

model.coef_, model.intercept_
