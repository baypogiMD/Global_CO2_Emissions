# 01_data_loading_and_sqlite_setup.ipynb

import pandas as pd
import sqlite3
from pathlib import Path

# Paths
DATA_RAW = Path("../data/raw/GlobalCO2Emissions.csv")
DB_PATH = Path("../data/processed/global_co2_emissions.db")

# Load data
df = pd.read_csv(DATA_RAW)

# Basic validation
assert {"Year", "Emissions"}.issubset(df.columns)
df = df.sort_values("Year")

# Connect to SQLite
conn = sqlite3.connect(DB_PATH)

# Create table
conn.execute("""
DROP TABLE IF EXISTS global_emissions;
""")

conn.execute("""
CREATE TABLE global_emissions (
    year INTEGER PRIMARY KEY,
    emissions REAL NOT NULL
);
""")

# Insert data
df.rename(columns={"Year": "year", "Emissions": "emissions"}) \
  .to_sql("global_emissions", conn, if_exists="append", index=False)

# Sanity check
pd.read_sql("SELECT * FROM global_emissions LIMIT 5", conn)
