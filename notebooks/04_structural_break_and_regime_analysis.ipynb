import pandas as pd
import sqlite3
import matplotlib.pyplot as plt

conn = sqlite3.connect("../data/processed/global_co2_emissions.db")

df = pd.read_sql("""
SELECT year, emissions
FROM global_emissions
ORDER BY year
""", conn)

def classify_era(year):
    if year < 1850:
        return "Pre-Industrial"
    elif year < 1950:
        return "Industrialization"
    else:
        return "Post-1950 Acceleration"

df["era"] = df["year"].apply(classify_era)

summary = df.groupby("era")["emissions"].agg(["mean", "max", "std"])
summary
