# 02_exploratory_time_series_analysis.ipynb

import pandas as pd
import sqlite3
import matplotlib.pyplot as plt

conn = sqlite3.connect("../data/processed/global_co2_emissions.db")

df = pd.read_sql("""
SELECT year, emissions
FROM global_emissions
ORDER BY year
""", conn)

# Linear scale
plt.figure()
plt.plot(df["year"], df["emissions"])
plt.xlabel("Year")
plt.ylabel("Global CO₂ Emissions (Gt)")
plt.title("Global CO₂ Emissions (1750–2020)")
plt.show()

# Log scale
plt.figure()
plt.plot(df["year"], df["emissions"])
plt.yscale("log")
plt.xlabel("Year")
plt.ylabel("Log Emissions")
plt.title("Log-Scale Emissions Growth")
plt.show()
